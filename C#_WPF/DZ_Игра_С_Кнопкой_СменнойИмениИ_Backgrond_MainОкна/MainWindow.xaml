<Window x:Class="ButtonCatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ловец Кнопок" Height="400" Width="600">
    <Grid x:Name="GameGrid">
        <StackPanel VerticalAlignment="Top">
            <Button x:Name="btnStart" Content="Начать игру" Click="btnStart_Click"/>
            <Button x:Name="btnSettings" Content="Настройки" Click="btnSettings_Click"/>
            <TextBlock x:Name="ScoreText" Text="Ожидание игры" FontSize="20" Height="67"/>
        </StackPanel>
    </Grid>
</Window>
