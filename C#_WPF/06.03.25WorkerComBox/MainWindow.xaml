<Window x:Class="_06._03._25WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06._03._25WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonBIG" Click="ButtonCluentInf_Click" Content="добавить инфу работника" HorizontalAlignment="Left" Margin="167,232,0,0" VerticalAlignment="Top" Height="46" Width="120" FontFamily="Bahnschrift Light Condensed"/>
        <ListBox x:Name="ListBoxBIIIG" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="167,0,167,319" FontFamily="Bahnschrift Condensed" SelectionChanged="ListBoxBIIIG_SelectionChanged"/>
        <ComboBox x:Name="ComboBoxSmall"  HorizontalAlignment="Left" Margin="167,0,0,0" VerticalAlignment="Center" Width="120" FontFamily="Bahnschrift Condensed" SelectionChanged="ComboBoxSmall_SelectionChanged"/>
        <Button Content="добавить строку в ComboBox&#xD;&#xA;" HorizontalAlignment="Left" Margin="502,180,0,0" VerticalAlignment="Top" Height="37" Width="177" FontFamily="Bahnschrift Condensed" Click="ButtonComboBox_Click"/>
        <TextBox x:Name="TextBoxBIG" HorizontalAlignment="Left" Margin="167,153,0,0" TextWrapping="Wrap" Text="Введите информацию о работнике" VerticalAlignment="Top" Width="233" Height="19" TextChanged="TextBox_TextChanged" FontFamily="Bahnschrift Condensed"/>
        <Button Content="Добавить работника в лист" HorizontalAlignment="Center" Margin="0,255,0,0" VerticalAlignment="Top" Height="123" Width="180" Click="ButtonResult_Click" FontFamily="Bahnschrift Condensed"/>

    </Grid>
</Window>
